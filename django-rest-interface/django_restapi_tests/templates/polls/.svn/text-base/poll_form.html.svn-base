<html>

	<head>
		<title>
			{% if update %}
				Poll: {{ poll.question }}
			{% else %}
				New Poll
			{% endif %}
		</title>
	</head>
	
	<body>
		
		{% if update %}
			<form method="PUT" action="../{{ poll.id }}/">
		{% else %}
			<form method="POST" action="../">
		{% endif %}
		
			{% if update %}
				<h1>Poll: {{ poll.question }}</h1>
			{% else %}
				<h1>New Poll</h1>			
			{% endif %}
			
			<table>
				{{ form.as_table }}
			</table>
			
			<input type="submit" />
		
		</form>
		
	</body>
	
</html>